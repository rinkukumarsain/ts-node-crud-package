{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,  // Add this line
    "declarationDir": "./dist"  // Add this line
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
